{
  "name": "web-project-template",
  "version": "1.0.0",
  "description": "Starting point for new web projects",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV='production' node ./app/index.js",
    "server": "nodemon --watch app --ignore app/public app/index.js",
    "server:debug": "node --inspect app/index.js",
    "watch": "npm-run-all clean --parallel webpack:watch copy:assets server",
    "build": "NODE_ENV='production' npm-run-all clean webpack:build copy:assets",
    "webpack:build": "webpack --progress --colors --optimize-minimize",
    "webpack:watch": "webpack --progress --colors --watch",
    "copy:assets": "mkdir -p ./build/public && rsync -rv --exclude=.gitkeep ./app/public/assets ./build/public",
    "clean": "rm -rf ./build",
    "postinstall": "npm run build"
  },
  "engines": {
    "node": "6.9.1"
  },
  "keywords": [],
  "author": "Blimp",
  "license": "MIT",
  "dependencies": {
    "autoprefixer": "^6.7.7",
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.2.1",
    "babel-loader": "^6.4.1",
    "babel-preset-es2015": "^6.24.0",
    "body-parser": "^1.17.1",
    "compression": "^1.6.2",
    "connect-livereload": "^0.6.0",
    "css-loader": "^0.28.0",
    "dotenv": "^4.0.0",
    "eslint": "^3.19.0",
    "eslint-config-blimp": "^4.0.1",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-babel": "^4.1.1",
    "express": "^4.15.2",
    "express-handlebars": "^3.0.0",
    "express-winston": "^2.3.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.0",
    "hash-webpack-plugin": "0.0.5",
    "helmet": "^3.5.0",
    "image-webpack-loader": "^3.3.0",
    "jaysonapi": "^2.1.0",
    "marked": "^0.3.6",
    "mongodb": "2.2.22",
    "normalize.css": "^6.0.0",
    "npm-run-all": "^4.0.0",
    "postcss-loader": "^1.3.3",
    "style-loader": "^0.16.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.0",
    "webpack": "^2.2.1",
    "webpack-livereload-plugin": "^0.11.0",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "nodemon": "^1.10.0"
  }
}
